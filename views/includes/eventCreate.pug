.formContainer
    h1 Add new event
    form(role='form' action="/events" method="post" style='max-width: 300px' )
        .form-group
            input.form-control(type="text" name="title" placeholder='Title')
        .form-group
            select.form-control( name="category" id="category" )
                option Game
                option Practise
        .form-group
            input.form-control(type="text" name="location" placeholder='Location')
        .form-group
            textarea.form-control(id="info" name="info" placeholder='Info')
        .form-group
            input.form-control(type="date" name="date")
        .form-group
            input.form-control(type="number" name="hour" maxlength="2" min="0" max="23" value="16")
        .form-group
            input.form-control(type="number" name="minutes" maxlength="2" min="0" max="59" value="00")
        button.btn.btn-default(type="submit") Submit
